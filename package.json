{
    "name": "node-signpdf",
    "version": "1.1.0",
    "description": "Simple signing of PDFs in node.",
    "repository": {
        "type": "git",
        "url": "https://github.com/vbuch/node-signpdf"
    },
    "license": "MIT",
    "keywords": [
        "sign",
        "verify",
        "pdf",
        "node",
        "nodejs",
        "typescript",
        "esign",
        "adobe",
        "ppklite",
        "sign detached",
        "pkcs7",
        "pkcs#7",
        "digital signature"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=8.9"
    },
    "scripts": {
        "test": "./node_modules/.bin/jest",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "npm run test -- --watch",
        "build": "./node_modules/.bin/tsc",
        "build:watch": "npm run build -- -w",
        "lint": "tslint --project . --format codeFrame",
        "precommit": "npm run lint",
        "prepush": "npm run test"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "node_modules",
            "dist"
        ]
    },
    "peerDependencies": {
        "node-forge": "^0.7.6"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.12",
        "@types/node-forge": "^0.9.0",
        "@types/pdfkit": "^0.10.4",
        "assertion-error": "^1.1.0",
        "coveralls": "^3.0.2",
        "jest": "^24.5.0",
        "node-forge": "^0.7.6",
        "pdfkit": "^0.10.0",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.2",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "pdf-lib": "^1.2.1"
    }
}
